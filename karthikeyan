#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX 50

struct Patient {
    char name[30];
    int priority;  
};

struct Patient queue[MAX];
int front = -1, rear = -1;

void enqueue(char name[], int priority) {
    int i;

    if (rear == MAX - 1) {
        printf("Queue is full\n");
        return;
    }

    if (front == -1) {
        front = rear = 0;
        strcpy(queue[0].name, name);
        queue[0].priority = priority;
    } else {
        i = rear;
        while (i >= front && queue[i].priority > priority) {
            queue[i + 1] = queue[i];
            i--;
        }
        strcpy(queue[i + 1].name, name);
        queue[i + 1].priority = priority;
        rear++;
    }
}


void dequeue() {
    if (front == -1 || front > rear) {
        printf("No patients in queue\n");
        return;
    }

    printf("Patient Treated: %s\n", queue[front].name);
    front++;
}


void display() {
    int i;
    if (front == -1 || front > rear) {
        printf("Queue is empty\n");
        return;
    }

    printf("\nPatient Queue:\n");
    for (i = front; i <= rear; i++) {
        printf("Name: %s | Priority: %s\n",
               queue[i].name,
               (queue[i].priority == 1) ? "Emergency" : "Normal");
    }
}

int main() {
    int choice, priority;
    char name[30];

    while (1) {
        printf("\nHospital Queue Management\n");
        printf("1. Add Patient\n");
        printf("2. Treat Patient\n");
        printf("3. Display Queue\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter patient name: ");
                scanf("%s", name);
                printf("Enter priority (1-Emergency, 2-Normal): ");
                scanf("%d", &priority);
                enqueue(name, priority);
                break;

            case 2:
                dequeue();
                break;

            case 3:
                display();
                break;

            case 4:
                exit(0);

            default:
                printf("Invalid choice\n");
        }
    }
}